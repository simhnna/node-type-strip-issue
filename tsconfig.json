{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2021",
    "lib": ["es2022"],
    "typeRoots": ["./node_modules/@types"],
    "moduleResolution": "node",
    "composite": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "removeComments": false,
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false
  }
}
